<!DOCTYPE html>
<html lang="en">

{% include "components/head.njk" %}

<body class="bg-gray-100 text-gray-800 py-6 px-4">
  <div class="max-w-2xl mx-auto p-6">

	{% include "components/header.njk" %}

    <!-- Posts Section -->
    <div class="space-y-8">

	  {% set bannerAction = "list:" %}
	  {% set bannerTarget = "1 day" %}
	  {% include "components/banner.njk" %}
	  {% set currentDate = date.toDateString() %}

	  <div class="mb-6">	  
		<h2 class"text-xl font-bold mb-2">{{ currentDate }}</h2>
			 
		{% for post in collections.post | reverse %}
		{% set postDate = post.date.toDateString() %}
		{% set postTime = post.date.toLocaleTimeString('en-US', { hour12: true}) %}
		{% if currentDate == postDate %}
			 
		<!-- Post 1,2,3,... -->
		<article class='bg-white p-4 rounded-lg shadow mb-4'>
		  <p class='text-gray-800'>{{ post.content | safe }}{{ postTime }}</p>

		  {% include "components/tags_for_collection.njk" %}
			   
		</article>
		{% endif %}
		{% endfor %}
			 
	  </div>
	</div>
	
	<!-- Pagination Section -->
	{% include "components/pagination.njk" %}

	<!-- Footer Section -->
	{% include "components/footer.njk" %}

  </div>
</body>
</html>
