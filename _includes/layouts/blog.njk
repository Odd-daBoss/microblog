<!DOCTYPE html>
<html lang="en">

{% include "components/head.njk" %}

<body class="bg-gray-100 text-gray-800 py-6 px-4">
    <div class="max-w-2xl mx-auto p-6">

 	{% include "components/header.njk" %}

    <!-- Posts Section -->
    <div class="space-y-8">

	  {% set bannerAction = "Post:" %}
	  {% set bannerTarget = "On Date" %}
	  {% include "components/banner.njk" %}

		<div class="mb-6">
			 
			 {% set postDate = page.date.toDateString() %}
			 {% set postTime = page.date.toLocaleTimeString('en-US', { hour12: true}) %}

			 <h2 class"text-xl font-bold mb-2">{{ postDate }}</h2>
    		 <article class='bg-white p-4 rounded-lg shadow mb-4'>
        	   <p class='text-gray-800'>
				 <article class="prose prose-gray">{{ content | safe }}{{ postTime }}</article>
			   </p>

			   {% include "components/tags.njk" %}
			   
			 </article>
			 
		</div>
	</div>
	
	<!-- Pagination Section -->
	{% include "components/pagination.njk" %}

	<!-- Footer Section -->
	{% include "components/footer.njk" %}

</div>
</body>
</html>
